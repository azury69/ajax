@model List<makingticket.Models.Ticket>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Assigned To</th>
            <th>Story Points</th>
            <th>Status</th>
            <th>Created At</th>
            @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
            {
                <th>Actions</th>  <!-- Add a column for actions (like delete) -->
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.Name</td>
                <td>@ticket.Description</td>
                <td>@ticket.AssignedTo</td>
                <td>@ticket.StoryPoints</td>
                <td>@ticket.Status</td>
                <td>@ticket.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                @if (User.IsInRole("Admin") || User.IsInRole("SuperAdmin"))
                {
                    <td>
                        <!-- Delete button for admin or superadmin -->
                        <button type="button" class="btn btn-danger delete-ticket" data-ticket-id="@ticket.Id">Delete</button>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
