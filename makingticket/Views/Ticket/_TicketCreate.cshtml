@model makingticket.ViewModels.TicketCreateViewModel

<div class="ticket-form">
    <h3>Create Ticket</h3>

    <form asp-action="Create" method="post">
        <!-- Ticket Name -->
        <div class="form-group">
            <label for="Name">Ticket Name</label>
            <input type="text" id="Name" name="Ticket.Name" class="form-control" required />
        </div>

        <!-- Description -->
        <div class="form-group">
            <label for="Description">Description</label>
            <textarea id="Description" name="Ticket.Description" class="form-control" required></textarea>
        </div>

        <!-- Assign To -->
        <div class="form-group">
            <label for="AssignedTo">Assign To</label>
            <select id="AssignedTo" name="Ticket.AssignedTo" class="form-control">
                <option value="">Select a User</option>
                @foreach (var user in Model.UserList)
                {
                    <option value="@user.Value">@user.Text</option>
                }
            </select>
        </div>

        <!-- Story Points -->
        <div class="form-group">
            <label for="StoryPoints">Story Points</label>
            <select id="StoryPoints" name="Ticket.StoryPoints" class="form-control">
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="5">5</option>
                <option value="8">8</option>
                <option value="13">13</option>
            </select>
        </div>

        <!-- Priority -->
        <div class="form-group">
            <label for="Priority">Priority</label>
            <select id="Priority" name="Ticket.Priority" class="form-control">
                <option value="0">Low</option>
                <option value="1">Medium</option>
                <option value="2">High</option>
                <option value="3">Critical</option>
            </select>
        </div>

        <!-- Status -->
        <div class="form-group">
            <label for="Status">Status</label>
            <select id="Status" name="Ticket.Status" class="form-control">
                <option value="0">New</option>
                <option value="1">InProgress</option>
                <option value="2">Resolved</option>
                <option value="3">Done</option>
            </select>
        </div>

        <!-- Due Date -->
        <div class="form-group">
            <label for="DueDate">Due Date</label>
            <input type="date" id="DueDate" name="Ticket.DueDate" class="form-control" />
        </div>

        <!-- Labels -->
        <div class="form-group">
            <label for="Labels">Labels</label>
            <input type="text" id="Labels" name="Ticket.Labels" class="form-control" />
        </div>

        <!-- Epic -->
        <div class="form-group">
            <label for="Epic">Epic</label>
            <input type="text" id="Epic" name="Ticket.Epic" class="form-control" />
        </div>

        @* <!-- Attachments --> *@
        @* <div class="form-group"> *@
        @*     <label for="Attachments">Attachments</label> *@
        @*     <input type="file" id="Attachments" name="Ticket.Attachments" class="form-control" multiple /> *@
        @* </div> *@

        <!-- Comments (optional) -->
        <div class="form-group">
            <label for="Comments">Comments</label>
            <textarea id="Comments" name="Ticket.Comments" class="form-control"></textarea>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary">Create Ticket</button>
    </form>
</div>
