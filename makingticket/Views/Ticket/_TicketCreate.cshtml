@model TicketViewModel

<div class="ticket-form">
    <div class="form-group">
        <label>Ticket Name</label>
        <input type="text" name="Tickets[@ViewData["Index"]].Name" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Description</label>
        <textarea name="Tickets[@ViewData["Index"]].Description" class="form-control" required></textarea>
    </div>

    <div class="form-group">
        <label>Assign To</label>
        <select name="Tickets[@ViewData["Index"]].AssignedTo" class="form-control">
            <option value="">Select a User</option>
            @foreach (var user in Model.UserList)
            {
                <option value="@user.Value">@user.Text</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label>Story Points</label>
        <select name="Tickets[@ViewData["Index"]].StoryPoints" class="form-control">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="5">5</option>
            <option value="8">8</option>
            <option value="13">13</option>
        </select>
    </div>

    <div class="form-group">
        <label>Status</label>
        <select name="Tickets[@ViewData["Index"]].Status" class="form-control">
            <option value="Working">Working</option>
            <option value="Completed">Completed</option>
        </select>
    </div>

    <button type="button" class="remove-ticket btn btn-danger">Remove</button>
</div>
