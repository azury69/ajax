@model makingticket.Models.Ticket

@{
    ViewData["Title"] = "Ticket Details";
}

<div class="container">
    <h2>Ticket Details</h2>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Assigned To:</strong> @Model.AssignedTo</p>
    <p><strong>Story Points:</strong> @Model.StoryPoints</p>
    <p><strong>Status:</strong> @Model.Status</p>

    <a href="@Url.Action("Index", "Ticket")" class="btn btn-primary">Back to Ticket List</a>
</div>
